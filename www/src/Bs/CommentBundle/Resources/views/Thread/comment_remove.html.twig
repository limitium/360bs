<div class="comment_delete_form_holder">
    <form class="comment_delete_form" action="{{ url('comment_patch_thread_comment_state', {'id': id, 'commentId': commentId}) }}" data-fos-comment-thread-id="{{ id }}" method="POST">

        {% block comment_form_fields %}
            {{ form_errors(form) }}

            {{ form_rest(form) }}
        {% endblock %}

        <input type="hidden" name="_method" value="patch" />

        <div class="comment_submit">
            {% block comment_form_submit %}
                <input type="submit" value="{{ 'comment_comment_delete' | trans({}, 'FOSCommentBundle') }}" />
            {% endblock %}
        </div>

    </form>
</div>
