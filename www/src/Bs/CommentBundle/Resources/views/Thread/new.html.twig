<form class="comment_comment_form" action="{{ url('comment_post_threads') }}" method="POST">

    {% block comment_form_fields %}
        {{ form_errors(form) }}
        {{ form_errors(form.id) }}
        {{ form_widget(form.id) }}
        {{ form_errors(form.permalink) }}
        {{ form_widget(form.permalink) }}

        {{ form_rest(form) }}
    {% endblock %}

    <div class="comment_submit">
        {% block comment_form_submit %}
            <input type="submit" value="{% trans from 'FOSCommentBundle' %}comment_comment_new_submit{% endtrans %}" />
        {% endblock %}
    </div>

</form>
