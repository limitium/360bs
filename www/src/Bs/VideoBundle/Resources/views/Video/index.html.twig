{% extends 'BsVideoBundle::layout.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script src='http://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js'></script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/videos.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/upload.css') }}" rel="stylesheet"/>
{% endblock %}
{% block content %}
    <div ng-controller="PlaybackController">
        <div class="container">
            <div class="row">
                <div class="span9">
                    <div id="player-container">
                        <div id="player"></div>
                    </div>
                </div>
                <div class="span3">
                    {% include 'BsVideoBundle:Video:_tricks_list.html.twig' %}
                </div>
            </div>
            {#{% include 'BsVideoBundle:Video:_tags.html.twig' %}#}
        </div>
        <div class="container videos">
            <div class="row">

                <div class="span2">
                    <ul class="nav nav-tabs nav-stacked">
                        <li class="active"><a href="#"><i class="icon-picture"></i> Newest</a></li>
                        <li><a href="#"><i class="icon-ok"></i> Popular</a></li>
                        <li><a href="#"><i class="icon-bookmark"></i> Most Viewed</a></li>
                        <li><a href="#"><i class="icon-th-list"></i> Categories</a></li>
                        <li><a href="#"><i class="icon-heart"></i> Recomended</a></li>
                    </ul>
                </div>
                <div class="span10">
                    <div class="row">
                        {% for video in videos %}
                            {% include 'BsVideoBundle:Video:_video_item.html.twig' %}
                        {% endfor %}
                    </div>
                </div>
            </div>


        </div>

    </div>


{% endblock %}